{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "web_app.app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "main.py connect4 --save_trajectories",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/rgi/main.py",
            "args": [
                "--game", "connect4",
                "--player1", "random",
                "--player2", "random",
                "--num_games", "1",
                "--save_trajectories",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}